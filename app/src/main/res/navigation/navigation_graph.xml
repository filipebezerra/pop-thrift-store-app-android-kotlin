<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/login_fragment"
    >

    <fragment
        android:id="@+id/login_fragment"
        android:name="dev.filipebezerra.android.popthriftstore.ui.login.LoginScreen"
        android:label="@string/login_title"
        tools:layout="@layout/login_fragment"
        >
        <action
            android:id="@+id/action_login_fragment_to_welcome_fragment"
            app:destination="@id/welcome_fragment"
            />
    </fragment>
    <fragment
        android:id="@+id/welcome_fragment"
        android:name="dev.filipebezerra.android.popthriftstore.ui.welcome.WelcomeScreen"
        android:label="@string/welcome_title"
        tools:layout="@layout/welcome_fragment"
        >
        <action
            android:id="@+id/action_welcome_fragment_to_instruction_fragment"
            app:destination="@id/instruction_fragment"
            />
    </fragment>
    <fragment
        android:id="@+id/instruction_fragment"
        android:name="dev.filipebezerra.android.popthriftstore.ui.instructions.InstructionsScreen"
        android:label="@string/instruction_title"
        tools:layout="@layout/instructions_fragment"
        >
        <action
            android:id="@+id/action_instruction_fragment_to_shoe_list_fragment"
            app:destination="@id/shoe_list_fragment"
            />
    </fragment>
    <fragment
        android:id="@+id/shoe_detail_fragment"
        android:name="dev.filipebezerra.android.popthriftstore.ui.shoedetail.ShoeDetailScreen"
        android:label="@string/shoe_detail_title"
        tools:layout="@layout/shoe_detail_fragment"
        />
    <fragment
        android:id="@+id/shoe_list_fragment"
        android:name="dev.filipebezerra.android.popthriftstore.ui.shoelist.ShoeListScreen"
        android:label="@string/shoe_list_title"
        tools:layout="@layout/shoe_list_fragment"
        >
        <action
            android:id="@+id/action_shoe_list_fragment_to_shoe_detail_fragment"
            app:destination="@id/shoe_detail_fragment"
            />
    </fragment>
</navigation>